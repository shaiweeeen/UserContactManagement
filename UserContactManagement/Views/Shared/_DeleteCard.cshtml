@{
}
<div class="row">
    
       
        <div class="col-5 mx-auto">

            <form asp-action="Delete" asp-controller="Contacts" method="post">
            </form>
            <input type ="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-2">
                    <img src="@Model.AvatarUrl" class="w-100" />
                </div>
                <div class="col-8">
                    <h6>@Model.FirstName @Model.LastName</h6>
                    <p class="fst-italic">@Model.ContactNumber</p>
                    <h6>Physical Address</h6>
                    <p class="card-text">Delivery Address: @Model.DeliveryAddress</p>
                    <p class="card-text">Billing Address: @Model.BillingAddress</p>
                </div>
            </div>

            <div class="row">
                <div class="col-4 offset-8">
                    <div class="row">
                        <div class="col-6">
                            
                        </div>
                        <div class="col-6">
                            <input type="submit" class="btn btn-outline-danger w-100" value="Delete">
                        </div>
                    </div>



                </div>
            </div>
    </div>
</div>