@model IEnumerable<UserContactManagement.ViewModels.ContactViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<div class="row m-4">
    <div class="col-md-10 col-lg-8 mx-auto col-sm-10">

        <div class="row">
            <div class="col-lg-5 col-md-6 col-sm-6 col-5">
                <h3>Your Contacts</h3>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-4 offset-lg-4 offset-sm-2 offset-2 col-5 mt-2">
                <a asp-action="Create" class="btn btn-primary w-100"><i class="fa-solid fa-address-card"></i> New </a>
            </div>
        </div>
        
    </div>
</div>


<table class="table">
 
        @foreach (var item in Model) {
                   <tr>
                    <partial name="_ContactCard" model="item" />
                   </tr>         
        }
    
</table>
