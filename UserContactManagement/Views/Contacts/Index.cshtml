@model IEnumerable<UserContactManagement.ViewModels.ContactViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<div class="row m-4">
    <div class="col-8 offset-2">
        <div class="row">
            <div class="col-10">
                <h3>Your Contacts</h3>
            </div>
            <div class="col-2">
                <a asp-action="Create" class="btn btn-primary w-100"><i class="fa-solid fa-address-card"></i> New </a>
            </div>
        </div>
        
    </div>
</div>


<table class="table">
 
        @foreach (var item in Model) {
                   <tr>
                    <partial name="_ContactCard" model="item" />
                   </tr> 
        
        }
    
</table>
